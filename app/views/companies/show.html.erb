<%= render :partial => "layouts/reports_header" if params[:print] %>
	<% if params[:print] %>
	<h1 color="#5E5F5D">Company</h1><br/>
	<% end %>

	<fieldset>

		<legend class="name">
			 <%=h @company.name %>
		</legend>
		<table >
			<tr>
			  <th>Contact:</th>
			  <td><%=h @company.contact %></td>
			</tr>
			<tr>
			  <th>Code(CNPJ/SIC):</th>
			  <td><%=h @company.code %></td>
			</tr>

			<tr>
			  <th>Phone:</th>
			   <td><%=h @company.phone %></td>
			</tr>

			<tr>
			  <th>Fax:</th>
			   <td><%=h @company.fax %></td>
			</tr>

			<tr>
			  <th>Email:</th>
			  <td> <%=h @company.email %></td>
			</tr>

			<tr>
			  <th>Website:</th>
			   <td><%=h @company.website %> </td>
			</tr>
		</table>
	</fieldset>
	<br/>

	<fieldset>
		<legend>Address</legend>
		<table class="addr">
			<tr>
			  <th>Country:</th>
			  <td> <%=h @company.address.country %></td>
			</tr>
			<tr>
			  <th>State:</th>
			  <td><%=h @company.address.state %></td>
			</tr>
			<tr>
			  <th >City:</th>
			  <td><%=h @company.address.city %></td>
			</tr>
			<tr>
			  <th>Street:</th>
			  <td><%=h @company.address.street %></td>
			</tr>
			<tr>
			  <th>Location:</th>
			  <td><%=h @company.address.location %></td>
			</tr>
			<tr>
			  <th>Zip Code:</th>
			  <td><%=h @company.address.zip_code %></td>
			</tr>
			<tr>
			  <th>Complement:</th>
			  <td><%=h @company.address.complement %></td>
		</table>
	</fieldset>
</br>

	<% unless params[:print] %>

		<div class="action">

		<%= link_to 'Edit',"#", :onclick => "addSubTab('tab_companies',
														'sub_tab_companies_edit_" + @company.id.to_s + "',
														'Editing "+@company.name.to_s+"' ,
														'/companies/edit/"+@company.id.to_s+"' ,
														'editIcon');"%>
		<span class="pipe">|</span>

		<%= link_to 'Print', "#", :onclick =>"printSubTab('/companies/show/"+@company.id.to_s+"?print=true','')";%>
		<span class="pipe">|</span>

		<%= link_to 'Close', "#", :onclick => "closeSubTab('tab_companies','sub_tab_companies_show_" + @company.id.to_s + "');" %>
		</div>
	<% end %>

	<%= render :partial => "layouts/reports_footer" if params[:print] %>

	<% if params[:print] %>
		<script type="text/javascript" >
			window.print();
		</script>
	<% end %>

