<p>
  <b>Name:</b>
  <%=h @diagram.name %>
</p>

<p>
  <b>Subracks qty:</b>
  <%=h @diagram.subracks_qty %>
</p>

<p>
  <b>Subracks rows:</b>
  <%=h @diagram.subracks_rows %>
</p>

<p>
  <b>Subracks cols:</b>
  <%=h @diagram.subracks_cols %>
</p>

<br />

<%= link_to 'Edit', "#", :onclick => "addSubTab('tab_diagrams',
												'sub_tab_diagrams_edit_" + @diagram.id.to_s + "',
												'Editing "+@diagram.name.to_s+"' ,
												'/diagrams/edit/"+@diagram.id.to_s+"' ,
												'editIcon');" %> |
<%= link_to 'Close', "#", :onclick => "closeSubTab('tab_diagrams','sub_tab_diagrams_show_" + @diagram.id.to_s + "');" %>

<br /><br />
<h1><b>Diagram Design</b></h1>
<br />

<table>
	<%
		col = 0
		1.upto(@diagram.subracks_qty) do |racks|
	%>
			<% if col >= 2 or col == 0 %><tr><% end %>
			<td>
			<table>
				<th colspan="<%= @diagram.subracks_cols %>">Rack <%= racks %></th>
				<tbody>
					<% 1.upto(@diagram.subracks_rows) do |axis_x| %>
						<tr>
						<% 1.upto(@diagram.subracks_cols) do |axis_y| %>
							<td align="center"><%= image_tag("subrack.png", :width => "30", :title => "Rack #{axis_x} x #{axis_y}") %></td>
						<% end %>
						</tr>
					<% end %>
				</tbody>
			</table>
			</td>
			<% if col >= 1 %><tr><% end %>
	<%
		col = col + 1
		col =  0 if col >= 2
		end
	%>
</table>
<br />




