<h1>Listing cables</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Span</th>
  </tr>

<% @cables.each do |cable| %>
  <tr>
    <td><%=h cable.name %></td>
    <td><%=h cable.span_id %></td>
    <td><%= link_to 'Show', cable %></td>
    <td><%= link_to 'Edit', edit_cable_path(cable) %></td>
    <td><%= link_to 'Destroy', cable, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New cable', new_cable_path %>